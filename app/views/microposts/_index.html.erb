<div class="col-md-3">
  <%= link_to "New Post", new_micropost_path, :class => "btn btn-default" %>
</div>
<div class="col-md-6 well">
      
   <% @microposts.each do |micropost| %>
      <div class="panel panel-default shadowing" style="margin: 10px">
        <div class="panel-heading"><h5 class="panel-title"><%= profile_user.fullname %></h5></div>
          <div class="panel-body">
              <%= micropost.content %>
            <hr>
          </div>
          <div class="panel-footer" >
            <ul class="list-unstyled pull-right" style="margin-bottom: 3px">
              <li><%= link_to 'Show', micropost%></li>
              <li><%= link_to 'Edit', edit_micropost_path(micropost) %></li>
              <li><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></li></ul>
            </div>
        </div>
  <% end %>

</div>
<div class="col-md-3"></div>
     
