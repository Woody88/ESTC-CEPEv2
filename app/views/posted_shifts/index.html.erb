<h1>Shift For Sale</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Position</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Seller</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posted_shifts.each do |posted_shift| %>
      <tr>
        <td><%= posted_shift.position %></td>
        <td><%= posted_shift.date.to_date.to_s(:long) %></td>
        <td><%= posted_shift.start_time.to_s(:time) %></td>
        <td><%= posted_shift.finish_time.to_s(:time) %></td>
        <td><%= posted_shift.seller_id %></td>
        <td><%= posted_shift.status %></td>

        <% if posted_shift.seller_id == current_user.id %>
          <td><%= link_to 'Show', posted_shift %></td>
          <td><%= link_to 'Edit', edit_posted_shift_path(posted_shift.st_id) %></td>
          <td><%= link_to 'Destroy', posted_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', posted_shift %></td>
          <td><%= link_to 'Pick Up', pick_up_path(:sid => posted_shift.st_id, :uid => posted_shift.seller_id) %></td>
         <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

