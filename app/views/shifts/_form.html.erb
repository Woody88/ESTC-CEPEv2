<%= simple_form_for(@shift) do |f| %>
  <%= f.error_notification %>

  
  <div class="row">
    <div class="col-md-3">
      <%= f.input :position, as: :select do %>
        <%=f.select:position, Shift::POSITIONS %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.input :date, as: :date, as: :string, :input_html => { :value => f.object.date.blank? ? '' : f.object.date.to_date.to_s(:long) }  %>
    </div>
  </div>

  <div class="row">
    <div class="columns col-md-2">
      <%= f.input :start_time, as: :time, as: :string, :input_html => { :value => f.object.start_time.blank? ? '' : f.object.start_time.to_s(:time)  }%>
    </div>
  </div>

  <div class="row">
    <div class="columns col-md-2">
    <%= f.input :finish_time, as: :time, as: :string, :input_html => { :value => f.object.finish_time.blank? ? '' : f.object.finish_time.to_s(:time) } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.input :shift_posted %>
    </div>
  </div>
    <%= f.button :submit %>
  </div>
<% end %>
