<h1>Listing shifts</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Date</th>
      <th>Start stime</th>
      <th>Finish time</th>
      <th>Original owner</th>
      <th>Current owner</th>
      <th>Shift</th>
      <th>Shift posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.position %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.finish_time %></td>
        <td><%= shift.original_owner %></td>
        <td><%= shift.current_owner %></td>
        <td><%= shift.shift_id %></td>
        <td><%= shift.shift_posted %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

